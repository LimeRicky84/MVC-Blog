{{#each article as |article| }}
<div class="row mb-4">
    <div class="col-md-5" >
        <h2>
            <a href="/article/{{article.id}}">{{article.title}}</a>
        </h2>
        <p>Written by {{article.user.name}}</p>
        <p>Date written</p>
    </div>
    <div class="col-md-7">
      <p>
        {{article.description}}
      </p>
    </div>
</div>
{{!-- {{else}} --}}
<h6 class="pb-4 has-text-centered is-italic">there are currently no posts</h6>
{{/each}}